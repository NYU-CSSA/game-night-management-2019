<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

<div id="container" class="container">
  <div class="row">
  	<div class="col-lg-6">
	    <form id="frmFindPlayer" role="form" method="get" action="/operation">
	        <div class="form-group">
	            <label for="txtPlayerNetId">Player netId</label>
	            <input type="text" class="form-control" id="txtPlayerNetId" placeholder="Enter Player NetId" name="netId" />
	        </div>
	        <button type="submit" class="btn btn-default btn-block">Find</button>
	    </form>
    </div>

<% if(player) { %>
		
	
	  	<div class = "col-lg-3 col-lg-offset-1" id="playerInfo">
			<table>
				<th>Current Player Info</th>
				<tr>
					<td>Player NetId: </td>
					<td><%= uid %></td>
				</tr>
				<tr>
					<td>Player Nickname: </td>
					<td><%= nickname %></td>
				</tr>
				<tr>
					<td>Chips: </td>
					<td><%= chips %></td>
				</tr>
			</table>
		</div>
	  </div>
</div>

	<div class="container">
		<form id="frmFindPlayer" role="form" method="post" action="/addmoney">
			<input type="hidden" value=<%= uid %> name="uid" />
	        <div class="form-group">
	            <label for="txtAddMoney">Add Money(下桌的时候！)</label>
	            <input type="number" class="form-control" id="txtAddMoney" placeholder="Enter Amount" name="addmoneyamount" min="0" />
	        </div>
	        <button type="submit" class="btn btn-default btn-block">Add</button>
    	</form>

    	<form id="frmFindPlayer"  role="form" method="post" action="/submoney">
    		<input type="hidden" value=<%= uid %> name="uid" />
	        <div class="form-group">
	            <label for="txtTakeOutMoney">Take Out Money(上桌的时候！)</label>
	            <input type="number" class="form-control" id="txtTakeOutMoney" placeholder="Enter Amount" name="takeoutmoneyamount" min="0" max=<%= chips %> />
	        </div>
	        <button type="submit" class="btn btn-default btn-block" >Take Out</button>
    	</form> 
    	
    </div>
    
	<div class="space"></div>

	<!-- <div class="container">
    	<form id="frmEnterTexas" role="form" method="post" action="/entertournament">
    		<input type="hidden" value=<%= uid %> name="uid" />
        	<button type="submit" class="btn btn-danger btn-block">ENTER TEXAS TOURNAMENT</button>
    	</form>
	</div> -->

<% } %>

<% if(msg) { %>
<h4 class="text-center"><%= msg %></h4>
<% } %>

</body>
</html>